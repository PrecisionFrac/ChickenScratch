@using ChickenScratch.Web.ViewModels;

@model ChickenScratch.Web.ViewModels.Customer.CustomerViewModel

@{
    ViewBag.Title = "Customer - Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = ChickenScratch.Util.Extensions.AttributeExtension.GetDisplayAttributeNameValue<ChickenScratch.Web.ViewModels.Customer.CustomerViewModel>(m => m.Name) } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.TokenSecret, new { htmlAttributes = new { @class = "form-control", placeholder = ChickenScratch.Util.Extensions.AttributeExtension.GetDisplayAttributeNameValue<ChickenScratch.Web.ViewModels.Customer.CustomerViewModel>(m => m.TokenSecret) } })
            @Html.ValidationMessageFor(model => model.TokenSecret, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" formaction="@Url.Action("Index")"  />
            </div>
        </div>
    </div>
}
